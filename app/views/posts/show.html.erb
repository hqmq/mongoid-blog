<p id="notice"><%= notice %></p>
<h1><%= @post.title %></h1>
<div class="post-date">
  <div class="date"><%= @post.created_at.mday %></div>
  <div class="mon-year"><%= @post.created_at.strftime('%b') %> <%= @post.created_at.year %></div>
</div>
<p class="post-tags">
  <% if @post.tags.nil? or @post.tags.empty? then %>
    <b>no tags assigned</b>
  <% else %>
    <b>tags:</b>
    <%= @post.tags.join(", ") %>
  <% end %>
</p>
<div class="post-content">
  <%= @post.content.html_safe %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
